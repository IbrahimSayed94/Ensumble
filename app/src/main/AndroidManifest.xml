<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ensumble">

    <application
        android:name=".AppConfig.MyApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_ensemble_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_ensemble_logo"
        android:supportsRtl="true"
        android:largeHeap="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.activity.ProductsFilteredByCategoryActivity"></activity>
        <activity android:name=".view.activity.SubCategoryActivity" />
        <activity android:name=".view.activity.SearchProductActivity" />
        <activity android:name=".view.activity.EnterRateActivity" />
        <activity android:name=".view.activity.SellerReviewActivity" />
        <activity android:name=".view.activity.ProductReviewsActivity" />
        <activity
            android:name=".view.activity.AddProductActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.SellerProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.SellerDetailsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.SellersActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.SignupActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.ProductDetailsActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".view.activity.SplachActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.zfdang.multiple_images_selector.ImagesSelectorActivity"
            android:configChanges="orientation|screenSize" />
    </application>

</manifest>